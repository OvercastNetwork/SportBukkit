+    void copyAttributeModifiers(NBTTagCompound tag) {
+        if(!hasAttributeModifiers()) return;
+
+        NBTTagList list = new NBTTagList();
+        for(Map.Entry<String, ItemAttributeModifier> entry : attributeModifiers.entries()) {
